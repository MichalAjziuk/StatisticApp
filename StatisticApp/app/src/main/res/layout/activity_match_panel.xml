<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchPanel"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/edit_text_block">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/team1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team1"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:paddingLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vs"
                    android:textSize="30dp"
                    android:paddingLeft="20dp"/>
                <TextView
                    android:id="@+id/team2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team1"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:paddingLeft="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingTop="10dp">
                <TextView
                    android:id="@+id/scoreTeam1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="30dp"
                    android:layout_marginLeft="60dp"/>
                <TextView
                    android:id="@+id/scoreTeam2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="30dp"
                    android:layout_marginLeft="120dp"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:background="@drawable/edit_text_block">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QT1"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="23dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QT2"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="23dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QT3"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="23dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QT4"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="23dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/team1Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team1"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/QT1TM1S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S1"
                    android:textSize="20dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/QT2TM1S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S2"
                    android:textSize="20dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/QT3TM1S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S3"
                    android:textSize="20dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/QT4TM1S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S4"
                    android:textSize="20dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/team2Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team1"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/QT1TM2S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S1"
                    android:textSize="20dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/QT2TM2S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S2"
                    android:textSize="20dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/QT3TM2S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S3"
                    android:textSize="20dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/QT4TM2S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S4"
                    android:textSize="20dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_marginTop="170dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Player Hosts:"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/BPTM1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lebron J."
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/BPTM2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Player Visitors:"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lebron J."
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>


</FrameLayout>